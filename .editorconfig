# Root editor config file
root = true

# Common settings
[*]
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true
charset = utf-8

# python and javascript common settings
[{*.py,*.js}]
indent_style = space

# Makefile settings
[Makefile]
indent_style = tab
tab_width = 4

# *.py files settings
[*.py]
indent_size = 4

# *.js files settings
[*.js]
indent_size = 2

# yml, json and markdown settings
[{*.yml,*.yaml,*.json,*.md}]
indent_style = space
indent_size = 2
